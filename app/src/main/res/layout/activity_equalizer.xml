<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".EqualizerActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="40dp">
        <ImageView android:layout_width="match_parent" android:layout_height="40dp" android:src="@color/cardview_shadow_start_color"/>
        <TextView android:layout_alignParentTop="true" android:textSize="30sp" android:gravity="center" android:text="Equlizer" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/eqalizer"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">
            <SeekBar android:id="@+id/Bar_one"  android:layout_width="300dp" android:layout_height="20dp" />
            <TextView android:gravity="center" android:id="@+id/text_one" android:layout_toRightOf="@+id/Bar_one" android:text="60 Hz" android:layout_width="100dp" android:layout_height="20dp"/>
            <SeekBar android:id="@+id/Bar_two" android:layout_below="@+id/Bar_one"  android:layout_width="300dp" android:layout_height="20dp"/>
            <TextView android:gravity="center" android:id="@+id/text_two" android:layout_toRightOf="@+id/Bar_two" android:layout_below="@+id/text_one"  android:text="60 Hz" android:layout_width="100dp" android:layout_height="20dp"/>
            <SeekBar android:id="@+id/Bar_three" android:layout_below="@+id/Bar_two"  android:layout_width="300dp" android:layout_height="20dp"/>
            <TextView android:gravity="center" android:id="@+id/text_three" android:layout_toRightOf="@+id/Bar_three" android:layout_below="@+id/text_two" android:text="60 Hz" android:layout_width="100dp" android:layout_height="20dp"/>
            <SeekBar android:id="@+id/Bar_four"  android:layout_below="@+id/Bar_three" android:layout_width="300dp" android:layout_height="20dp"/>
            <TextView android:gravity="center" android:id="@+id/text_four" android:layout_toRightOf="@+id/Bar_four" android:layout_below="@+id/text_three" android:text="60 Hz" android:layout_width="100dp" android:layout_height="20dp"/>
            <SeekBar android:id="@+id/Bar_five" android:layout_below="@+id/Bar_four"  android:layout_width="300dp" android:layout_height="20dp"/>
            <TextView android:gravity="center" android:id="@+id/text_five" android:layout_toRightOf="@+id/Bar_five" android:layout_below="@+id/text_four" android:text="60 Hz" android:layout_width="100dp" android:layout_height="20dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView

            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>